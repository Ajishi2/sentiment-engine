# Environment variables for the Fear & Greed Sentiment Engine
# Copy this file to .env and fill in your API keys

# Twitter API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=SentimentBot/1.0

# News API
NEWS_API_KEY=your_news_api_key_here

# Financial Data APIs
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Hugging Face (for advanced NLP models)
HUGGINGFACE_TOKEN=your_huggingface_token

# Database (if using in production)
DATABASE_URL=postgresql://user:password@localhost/sentiment_db

# Logging Level
LOG_LEVEL=INFO

# System Configuration
MAX_WORKERS=4
CACHE_SIZE=1000